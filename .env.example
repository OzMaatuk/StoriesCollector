# ================================
# Application
# ================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ================================
# Database (PostgreSQL)
# ================================
# For Dev Container (services run on localhost)
DATABASE_URL="postgresql://stories_user:stories_pass@localhost:5432/stories_collector?schema=public"

# For Docker Compose Production (services run in separate containers)
# DATABASE_URL="postgresql://stories_user:stories_pass@postgres:5432/stories_collector?schema=public"

# ================================
# Redis
# ================================
# For Dev Container
REDIS_URL=redis://localhost:6379

# For Docker Compose Production
# REDIS_URL=redis://redis:6379

# Redis password (optional)
REDIS_PASSWORD=

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# ================================
# JWT & OTP Configuration
# ================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=15m
OTP_CODE_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5

