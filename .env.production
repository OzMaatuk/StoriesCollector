# ================================
# Application
# ================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ================================
# Database (PostgreSQL)
# ================================
# DATABASE_URL="postgresql://stories_user:stories_pass@localhost:5432/stories_collector?schema=public"
DATABASE_URL="postgresql://stories_user:stories_pass@postgres:5432/stories_collector?schema=public"

# ================================
# Redis
REDIS_URL=redis://localhost:6379

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Logging
# ================================
LOG_LEVEL=debug

# ================================
# JWT & OTP Configuration
# ================================
JWT_SECRET=production-jwt-secret-key-min-32-chars-long
JWT_EXPIRES_IN=15m
OTP_CODE_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5